{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:prettier/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["prettier", "@typescript-eslint"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "tabWidth": 2,
        "printWidth": 80,
        "trailingComma": "all",
        "semi": true,
        "jsxSingleQuote": true,
        "arrowParens": "avoid"
      }
    ],
    "@typescript-eslint/no-unused-vars": "error",
    "no-duplicate-imports": "error",
    "prefer-const": "warn"
  }
}
